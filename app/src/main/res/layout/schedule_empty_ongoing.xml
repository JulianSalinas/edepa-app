<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/size_medium"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_default"
            app:cardBackgroundColor="@color/app_accent_light"
            app:cardCornerRadius="75dp"
            app:cardElevation="0dp"
            android:tag=":aesthetic_ignore">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_medium"
                android:layout_margin="@dimen/size_medium"
                android:text="@string/text_without_ongoing"
                android:textColor="@color/app_primary_font"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_default"
            app:cardBackgroundColor="?colorPrimary"
            app:cardCornerRadius="@dimen/card_radius_chat_message"
            app:cardElevation="4dp"
            android:tag=":aesthetic_ignore">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_medium"
                android:text="@string/text_refresh"
                android:textColor="@color/app_primary_font" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>