<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_preview"
            android:textStyle="bold"/>

        <include layout="@layout/people_item"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_accent_light"/>

        <TextView
            android:padding="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_person"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_default"
            android:layout_marginEnd="@dimen/size_default">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_complete_name"
                android:hint="@string/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:paddingLeft="@dimen/size_default"
                android:paddingRight="@dimen/size_default"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:tag=":aesthetic_ignore"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:paddingTop="@dimen/size_default"
            android:paddingEnd="@dimen/size_default"
            android:paddingStart="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_person_description"
            android:textStyle="bold"/>

        <TextView
            android:paddingStart="@dimen/size_default"
            android:paddingEnd="@dimen/size_default"
            android:paddingBottom="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_person_description_example"
            android:fontFamily="sans-serif-light"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_default"
            android:layout_marginEnd="@dimen/size_default">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_title"
                android:hint="@string/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:paddingLeft="@dimen/size_default"
                android:paddingRight="@dimen/size_default"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:tag=":aesthetic_ignore"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:padding="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_person_about"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_default"
            android:layout_marginEnd="@dimen/size_default">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_about"
                android:hint="@string/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:paddingLeft="@dimen/size_default"
                android:paddingRight="@dimen/size_default"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:tag=":aesthetic_ignore"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/add_person_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_default"
            android:background="@color/edepa_primary"
            android:elevation="2dp"
            android:text="@string/text_add_person"
            android:textColor="@color/app_white_font"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>