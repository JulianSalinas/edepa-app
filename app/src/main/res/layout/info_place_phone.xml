<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_place_phone"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/size_small"
        android:background="@color/app_accent_light" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/place_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/material_grey"
            app:cardCornerRadius="@dimen/size_medium"
            tools:ignore="RelativeOverlap"
            android:tag=":aesthetic_ignore">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_call"
                android:textColor="@color/app_white"
                android:paddingTop="@dimen/size_smallest"
                android:paddingBottom="@dimen/size_smallest"
                android:paddingStart="@dimen/size_small"
                android:paddingEnd="@dimen/size_small"
                android:tag=":aesthetic_ignore"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/size_small"
                    android:tint="@color/material_blue"
                    android:contentDescription="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/material_blue"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="@string/text_phone"
                    android:tag=":aesthetic_ignore"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/size_small"/>

                <TextView
                    android:id="@+id/place_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColorLink="@color/app_primary_font"
                    tools:text="+506 81859563"
                    android:autoLink="phone"
                    android:tag=":aesthetic_ignore"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>