<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_download_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:cardCornerRadius="@dimen/card_radius_default"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/app_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="@dimen/size_icon_container_big"
            android:background="@color/material_light_green">

            <ImageView
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_download"
                android:tint="@color/app_white" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_accent_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_download_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium"
                android:text="Nombre de archivo.pdf"/>

            <TextView
                android:id="@+id/event_download_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120 MB"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>