<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_item_people_front"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:background="@color/material_blue"
        android:layout_height="match_parent"
        android:layout_width="@dimen/size_icon_container_big">

        <ImageView
            android:src="@drawable/ic_people"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_centerInParent="true"
            android:tint="@color/app_white"
            android:contentDescription="@null"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginEnd="@dimen/size_small"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold"
                android:text="@string/text_exhibitors"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginEnd="@dimen/size_small"
                android:text="@string/text_press_to_preview"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/event_people_drop_view"
            android:layout_width="@dimen/size_icon_container"
            android:layout_height="@dimen/size_icon_container"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/headerIndicator"
                android:src="@drawable/ic_expansion_header_indicator_grey_24dp"
                android:tint="@color/app_primary_font"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>